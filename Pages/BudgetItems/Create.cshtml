@page
@model cashSpot.Web.Pages.BudgetItems.CreateModel
 
<h4>Budget-Posten</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BudgetItem.Name" class="control-label"></label>
                <input asp-for="BudgetItem.Name" class="form-control" />
                <span asp-validation-for="BudgetItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetItem.PlannedMonthlyAmount" class="control-label"></label>
                <input asp-for="BudgetItem.PlannedMonthlyAmount" class="form-control" />
                <span asp-validation-for="BudgetItem.PlannedMonthlyAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Passt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">zurück zur Übersicht</a>
</div>

