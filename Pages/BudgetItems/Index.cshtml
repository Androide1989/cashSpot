@page
@model cashSpot.Web.Pages.BudgetItems.IndexModel

<p>In welche Bereiche soll dein Geld fliessen? Erfass hier deine verschiedenen Budget-Posten.</p>
<p>
    <a asp-page="Create">Neuer Posten</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetItem[0].PlannedMonthlyAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BudgetItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlannedMonthlyAmount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Ändern</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Weg damit</a>
            </td>
        </tr>
}
    </tbody>
</table>
